  <content><![CDATA[
constexpr int M = 1E9 + 7;
template <typename T>
T POW(T a, T b) {
    T ans = 1;
    while (b) {
        if (b & 1) {
            ans *= 1LL * a % M;
        }
        a *= 1LL * a % M;
        b >>= 1;
    }
    return ans;
}
]]></content>
